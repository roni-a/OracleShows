#!/usr/bin/ksh

#---------------------------------------------------
# USAGE
#---------------------------------------------------
Usage () {
   echo "\n\tUsage: showevent" 
   exit
}

#---------------------------------------------------
# Show tables/indexes location and size
#---------------------------------------------------
ShowEvent () {
sqlplus -s $USHOW/${PSHOW} sqls/eventtimer
}

#---------------------------------------------------
# MAin
#---------------------------------------------------
if [ $1 = "-h" ] ; then
   Usage
   exit
fi

ShowEvent
